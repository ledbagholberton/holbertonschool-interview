#!/usr/bin/python3
"""
FUnction minOperations calculations
"""


def minOperations(n):
    """Function minOperations"""
    cost = 0
    if type(n) is not int:
        return 0
    if n <= 0 or type(n) is not int:
        return 0
    i = 2
    while (i<=n):
        i += 1
        while (n % i == 0):
            cost += 1
            n = n/i
    return int(cost)
